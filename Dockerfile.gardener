FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

COPY agents/gardener/requirements.txt ./requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

COPY agents/gardener /app/agents/gardener

ENV PYTHONPATH=/app

CMD ["python", "-m", "agents.gardener.main"]
